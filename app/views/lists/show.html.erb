<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path @list.photo.key, height: 300, crop: :fill %>')">
  <div class="container">
    <h1><%= @list.name %></h1>
  </div>
</div>

<%= link_to 'Add a new movie', new_list_bookmark_path(@list), class: "btn btn-success" %>

<div class="cards">
  <% @list.movies.each do |movie| %>
    <div class="card-trip">
      <%= image_tag movie.poster_url, alt: movie.title%>
      <div class="card-trip-infos">
        <h2><%= movie.title %></h2>
        <p><%= movie.rating %></p>
        <p><%= movie.overview %></p>
        <p>Bookmark:
        <% movie.bookmarks.each do |bookmark| %>
          <%= bookmark.comment %>
          <%= link_to "Delete", bookmark_path(bookmark), method: :delete, data: { confirm: "Are you sure?" } %>
        <% end %>
        </p>
      </div>
    </div>
  <% end %>
</div>


<%= link_to 'Back to list', lists_path %> |

<%= link_to "Remove this list", list_path(@list), method: :delete, data: { confirm: "Are you sure?" } %>
