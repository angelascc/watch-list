<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1536440136628-849c177e76a1?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=725&q=80);">
  <div class="container">
    <h1><%= @list.name %></h1>
  </div>
</div>

<%= link_to 'Add a new movie', new_list_bookmark_path(@list), class: "btn btn-success" %>

<div class="cards">
  <% @list.movies.each do |movie| %>
    <div class="card-trip">
      <img src="https://images.unsplash.com/photo-1594909122845-11baa439b7bf?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=870&q=80" />
      <div class="card-trip-infos">
        <h2><%= movie.title %></h2>
        <p><%= movie.rating %></p>
        <p><%= movie.overview %></p>
        <p>Bookmark:
        <% movie.bookmarks.each do |bookmark| %>
          <%= bookmark.comment %>
          <%= link_to "Delete", bookmark_path(bookmark), method: :delete, data: { confirm: "Are you sure?" } %>
        <% end %>
        </p>
      </div>
    </div>
  <% end %>
</div>


<%= link_to 'Back to list', lists_path %> |

<%= link_to "Remove this list", list_path(@list), method: :delete, data: { confirm: "Are you sure?" } %>
